{% extends 'base.html.twig' %}

{% block title %}{{ neighborhood.name | capitalize }} {{ brand.title }} {{ category.title }}{% endblock %}

{% block body %}
    <div class="container">
        <section id="features" class="text-center my-5">
            <h6 class="title display-4">{{ neighborhood.name | capitalize }} {{ brand.title }} {{ category.title }}</h6>
            <p class="grey-text w-responsive mx-auto mb-5 wow fadeIn" data-wow-delay="0.2s">
                {{ brand.content |raw }}
            </p>

            <a class="text-center btn btn-primary " href="tel:{{ global.phone.phone }}">{{ global.phone.title }} <i class="fas fa-phone"></i></a>
            <a class="text-center btn btn-success" target="_blank" href="https://wa.me/{{ global.phone.whatsapp }}">{{ global.phone.wpTitle }} <i class="fab fa-whatsapp"></i></a>
        </section>
    </div>

    <div class="container">

        <!-- Section: Team v.1 -->
        <section class="team-section text-center my-5" id="team">
            <h3 class="text-center title my-5 dark-grey-text font-weight-bold wow fadeIn" data-wow-delay="0.2s">
                <strong>Hizmet Verdiğimiz {{neighborhood.name}} Mahalleleri</strong>
            </h3>
            <hr>
            <div class="row justify-content-md-center">

                {% for n in neighborhood.district.neighborhoods %}
                    <div class="col-lg-4 col-md-12 mb-5">
                        <div class="card testimonial-card">
                            <div class="card-up success-color text-center align-items-center">
                                <p class="text-white fs-2">
                                    <strong>
                                        {{ brand.title }} {{ category.title }} {{ n.name }}
                                    </strong>
                                </p>
                            </div>
                            <div class="card-body">
                                <h4 class="mt-1">
                                    <strong>{{ n.name }}</strong>
                                </h4>
                                <hr>
                                <p class="dark-grey-text">
                                    <a href="{{ path('brand_neighborhood', {'neighborhoodSlug':n.slug, 'brandSlug':brand.slug, 'categorySlug':category.slug}) }}" class="btn btn-outline-success btn-rounded">{{ brand.title }} {{ category.title }} {{ neighborhood.name }}<i class="fas fa-arrow-right"></i></a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        </section>


    </div>

    <div class="container">
        <section class="team-section text-center my-5" id="team">
            <h3 class="text-center title my-5 dark-grey-text font-weight-bold wow fadeIn" data-wow-delay="0.2s">
                <strong>{{ brand.title }} {{ category.title }} İçerikleri</strong>
            </h3>
            <hr>
            <div class="row justify-content-md-center">

                {% for c in brand.brandContents %}
                    <div class="col-lg-4 col-md-12 mb-5">
                        <div class="card testimonial-card">
                            <div class="card-up warning-color text-center align-items-center">
                                <p class="text-white fs-2">
                                    <strong>
                                        {{ c.title }}
                                    </strong>
                                </p>
                            </div>
                            <div class="card-body">
                                <h4 class="mt-1">
                                    <strong>
                                        {{ brand.title }} {{ category.title }}
                                    </strong>
                                </h4>
                                <hr>
                                <p class="dark-grey-text">
                                    <a href="{{ path('brand_content', {'brandSlug':brand.slug, 'categorySlug':category.slug, 'brandContentSlug':c.slug}) }}" class="btn btn-warning btn-rounded">{{ c.title }}<i class="fas fa-arrow-right"></i></a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        </section>
    </div>

{% endblock %}
