{% extends 'base.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block body %}
    <div class="container">
        <section id="features" class="text-center my-5">
            <p class="grey-text w-responsive mx-auto mb-5 wow fadeIn" data-wow-delay="0.2s">
                {{ category.content |raw }}
            </p>
            <a class="text-center btn btn-primary " {% if global.general.isGoogletag %} onclick="return gtag_report_conversion('tel:{{ global.phone.phone }}');" {% endif%} href="tel:{{ global.phone.phone }}">{{ global.phone.title }} <i class="fas fa-phone"></i></a>
            <a class="text-center btn btn-success" {% if global.general.isGoogletag %} onclick="return gtag_report_conversion('https://wa.me/{{ global.phone.whatsapp }}');" {% endif%} target="_blank" href="https://wa.me/{{ global.phone.whatsapp }}">{{ global.phone.wpTitle }} <i class="fab fa-whatsapp"></i></a>
        </section>

    </div>

    {% if category.brands |length > 0 %}
        <!-- Second container -->
        <div class="container-fluid" style="background-color: #f4f4fa">
            <div class="container py-4">

                <!-- Section: Services -->
                <section class="my-3 pb-3">

                    <!-- Section heading -->
                    <h3 class="text-center title my-5 pt-4 pb-5 dark-grey-text font-weight-bold wow fadeIn" data-wow-delay="0.2s">
                        <strong>{{ category.title }} Markaları</strong>
                    </h3>

                    <!-- First row -->
                    <div class="row wow fadeIn" data-wow-delay="0.4s">

                        {% for brand in category.brands %}
                            <div class="col-md-4 mb-5 text-center">

                                <!-- Panel -->
                                <div class="card card-body white hoverable">
                                    <a href="{{ path('brand',{'brandSlug':brand.slug, 'categorySlug': category.slug}) }}">
                                        <img src="{{ brand.photo }}" class="img-fluid" alt="{{ brand.title }}">
                                    </a>
                                    <p class="title font-weight-bold dark-grey-text text-center text-uppercase spacing mt-4 mx-4">
                                        <strong>{{ brand.title }}</strong>
                                    </p>
                                    <p class="grey-text font-small text-center mx-4">
                                        <a href="{{ path('brand',{'brandSlug':brand.slug, 'categorySlug': category.slug}) }}" class="btn btn-success btn-rounded">{{ brand.title }} {{ category.title}} <i class="fas fa-arrow-right"></i></a>
                                        <br>
                                        <a {% if global.general.isGoogletag %} onclick="return gtag_report_conversion('tel:{{ global.phone.phone }}');" {% endif%} href="tel:{{ global.phone.phone }}" class="btn btn-success btn-sm">{{ global.phone.title }}</a>
                                        <a {% if global.general.isGoogletag %} onclick="return gtag_report_conversion('https://wa.me/{{ global.phone.whatsapp }}');" {% endif%} class="text-center btn btn-sm btn-success" target="_blank" href="https://wa.me/{{ global.phone.whatsapp }}">{{ global.phone.wpTitle }} <i class="fab fa-whatsapp"></i></a>

                                        <br>
                                        <a {% if global.general.isGoogletag %} onclick="return gtag_report_conversion('tel:{{ global.phone.phone }}');" {% endif%} href="tel:{{ global.phone.phone }}" class="">{{ global.phone.phone }}</a>
                                    </p>
                                </div>
                                <!-- Panel -->

                            </div>
                        {% endfor %}

                    </div>
                    <!-- First row -->

                </section>
                <!-- Section: Services -->

            </div>
        </div>
        <!-- Second container -->

    {% endif %}
    <!-- Second container -->

    <div class="container">

        <!-- Section: Team v.1 -->
        <section class="team-section text-center my-5" id="team">
            <h3 class="text-center title my-5 dark-grey-text font-weight-bold wow fadeIn" data-wow-delay="0.2s">
                <strong>Hizmet Verdiğimiz Şehirler</strong>
            </h3>
            <hr>
            <div class="row justify-content-md-center">

                {% for c in city %}
                    <div class="col-lg-4 col-md-12 mb-5">
                        <div class="card testimonial-card">
                            <div class="card-up success-color-dark"></div>
                            <div class="card-body">
                                <h4 class="mt-1">
                                    <strong>{{ c.name }}</strong>
                                </h4>
                                <hr>
                                <p class="dark-grey-text">
                                    <a href="{{ path('category_city',{'citySlug':c.slug,'categorySlug':category.slug}) }}" class="btn btn-success btn-rounded">{{ category.title }} {{ c.name }}<i class="fas fa-arrow-right"></i></a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        </section>


    </div>


{% endblock %}
