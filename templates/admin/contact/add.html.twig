{% extends 'admin/base.html.twig' %}

{% block title %}İletişim Ekle{% endblock %}

{% block body %}
    <p class="display-6 text-center">İletişim Ekle</p>
    <hr>

    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.title) }}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label for="type">İletişim Tipi</label>
            <select name="type" class="form-control" id="type">
                {% for t in types %}
                    <option value="{{ t.id }}">{{ t.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
