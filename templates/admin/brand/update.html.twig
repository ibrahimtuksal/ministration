{% extends 'admin/base.html.twig' %}

{% block title %}Marka Ekle{% endblock %}

{% block body %}
    <p class="display-6 text-center">Marka Ekle</p>
    <hr>

    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.title) }}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label for="category">Kategori</label>
            <select name="category" class="form-control" id="category">
                {% for c in categorys %}
                    <option
                            {% if brand.category.id == c.id %}
                                selected
                            {% endif %}
                            value="{{ c.id }}">{{ c.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    {{ form_widget(form.photo, {'required':false}) }}
    {{ form_end(form) }}

{% endblock %}
