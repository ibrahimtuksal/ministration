{% extends 'base.html.twig' %}

{% block title %}BRS Beyaz Eşya Servisi{% endblock %}
{% block stylesheets %}
    <style>
        {% for sPhoto in sliders %}
        .carousel-item:nth-child({{ loop.index }}) {
            background-image: url("{{ sPhoto.photo }}");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
        }
        {% endfor %}
    </style>
{% endblock %}
{% block body %}
    <div class="container">
        <section id="features" class="text-center my-5">

            <!-- Section heading -->
            <h2 class="title my-5 wow fadeIn" data-wow-delay="0.2s">
                <strong>{{ corporateIndex.title }}</strong>
            </h2>

            <!-- Section description -->
            <p class="grey-text w-responsive mx-auto mb-5 wow fadeIn" data-wow-delay="0.2s">
                {{ corporateIndex.content | raw}}
            </p>

            <!-- Grid row -->
            <div class="row wow fadeIn" data-wow-delay="0.2s">
                <div class="col-lg-12 text-center my-3">
                    <h2 class="title my-5 wow fadeIn" data-wow-delay="0.2s">
                        <strong>Hizmetlerimiz</strong>
                    </h2>
                </div>

                {% for c in categorys %}
                    <!-- Grid column -->
                    <div class="col-lg-4 text-center mb-3">
                        <div class="icon-area">
                            <div class="avatar">
                                <a href="#">
                                    <img class="img-fluid" src="{{ c.photo }}" alt="qwe">
                                </a>
                            </div>
                            <br>
                            <h5 class="dark-grey-text font-weight-bold mt-2"><a href="#" class="text-dark">{{ c.title }}</a></h5>
                            <div class="mt-1">
                                <p class="mx-3 grey-text">

                                </p>
                                <a href="tel:{{ phone.phone }}" class="btn btn-success btn-sm">{{ c.title }} İçin Ara <i class="fas fa-phone"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Grid column -->
                {% endfor %}


            </div>
            <!-- Grid row -->

        </section>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
{% endblock %}
