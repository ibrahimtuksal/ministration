<!-- Navigation & Intro -->
<header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top scrolling-navbar white">
        <div class="container">
            <a class="navbar-brand font-weight-bold title" href="{{ path('home') }}">BRS Beyaz EÅŸya Servisi</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                    aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="list-unstyled navbar-nav mr-auto">
                    <li class="nav-item ml-4">
                        <a class="nav-link title" href="{{ path('home') }}" data-offset="90">Ana sayfa</a>
                    </li>
                    <li class="nav-item dropdown ml-4 mb-0">
                        <a class="nav-link dropdown-toggle title" id="navbarDropdownMenuLink" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false"> Hizmetler </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            {% for c in categorys %}
                                <a class="dropdown-item" href="#">{{ c.title }}</a>
                            {% endfor %}
                        </div>
                    </li>
                </ul>
                <!-- Social Icon  -->
                <ul class="navbar-nav nav-flex-icons">
                    <li class="nav-item">
                        <a class="nav-link">
                            <i class="fab fa-facebook-f title"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            <i class="fab fa-twitter title"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            <i class="fab fa-instagram title"></i>
                        </a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="btn green text-white btn-rounded btn-sm font-weight-bold" href="#contact" data-offset="90">Free
                            trial</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Carousel Wrapper -->
    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            {% for slider in sliders %}
                <li data-target="#carousel" data-slide-to="{{ slider.queue }}"
                        {% if loop.index == 1 %}
                            class="active"
                        {% endif %}
                >
                </li>

            {% endfor %}
        </ol>
        <!-- Indicators -->

        <!-- Slides -->
        <div class="carousel-inner" role="listbox">

            {% for s in sliders %}
                <div class="carousel-item {% if loop.index == 1 %}active{% endif %}">
                    <!-- Mask -->
                    <div class="view">
                        <div
                                class="h-100 d-flex justify-content-center align-items-center mask rgba-black-light white-text text-center">
                            <ul class="list-unstyled animated fadeInUp col-md-12">
                                <li>
                                    <h1 class="display-4 font-weight-bold wow fadeIn" data-wow-delay="0.3s">{{ s.title }}</h1>
                                </li>

                                <li>
                                    <hr class="hr-light wow fadeIn w-50" data-wow-delay="0.3s">

                                    <a class="btn btn-success btn-rounded  btn-lg font-weight-bold wow fadeIn"
                                       data-wow-delay="0.3s" href="tel:{{ phone.phone }}">
                                        {{ phone.title }} <i class="fas fa-phone"></i>
                                    </a>
                                    <a class="btn btn-success btn-rounded btn-lg font-weight-bold wow fadeIn"
                                       data-wow-delay="0.3s" target="_blank" href="https://wa.me/{{ phone.whatsapp }}">
                                        {{ phone.wpTitle }} <i class="fab fa-whatsapp"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- Mask -->
                </div>
            {% endfor %}

        </div>
        <!-- Slides -->

        <!-- Controls -->
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <!-- Controls -->
    </div>
    <!-- Carousel Wrapper -->

</header>
<!-- Navigation & Intro -->